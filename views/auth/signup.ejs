<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <%if(errMes){%>
                    <div class="user-message user-message--error">
                        <%=errMes%>
                    </div>
                    <%}%>
                        <form class="product-form" action="/signup" method="POST" novalidate>
                            <div class="form-control">
                                <label for="email">E-Mail</label>
                                <input type="email" class="<%=validationError.find(e=>e.param==='email')? 'invalid' : ''%>" name="email" id="email" value="<%=oldDoc.email%>">
                            </div>
                            <div class="form-control">
                                <label for="username">User Name</label>
                                <input type="text" name="username" id="username" value="<%=oldDoc.username%>">
                            </div>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input type="password" class="<%=validationError.find(e=>e.param==='password')? 'invalid' : ''%>" name="password" id="password" value="<%=oldDoc.password%>">
                            </div>
                            <div class="form-control">
                                <label for="confirm">Confirm Password</label>
                                <input type="password" class="<%=validationError.find(e=>e.param==='confirm')? 'invalid' : ''%>" name="confirm" id="confirm" value="<%=oldDoc.confirm%>">
                            </div>
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <button class="btn" type="submit">Signup</button>
                        </form>
            </main>
            <%- include('../includes/end.ejs') %>